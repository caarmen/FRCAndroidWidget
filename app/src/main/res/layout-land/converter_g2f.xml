<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        tools:ignore="UnusedAttribute" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/method_romme"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/frcDateRomme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:freezesText="true"
            android:textSize="14sp"
            tools:text="Primidi 1 brumaire 222: (Pomme)" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/method_equinox"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/frcDateEquinox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:freezesText="true"
            android:textSize="14sp"
            tools:text="Primidi 1 brumaire 222: (Pomme)" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/method_von_madler"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/frcDateVonMadler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:textSize="14sp"
            tools:text="Primidi 1 brumaire 222: (Pomme)" />

    </LinearLayout>
</LinearLayout>

